{
  "annotations": {
    "list": []
  },
  "title": "K3S Cluster Overview",
  "uid": "k3s-cluster-overview",
  "version": 1,
  "panels": [
    {
      "title": "Cluster Memory Usage",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 0, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "percentage",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "1 - sum(node_memory_MemAvailable_bytes) / sum(node_memory_MemTotal_bytes)",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Cluster CPU Usage",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 6, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "percentage",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "1 - avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m]))",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Cluster Filesystem Usage",
      "type": "gauge",
      "gridPos": { "h": 6, "w": 6, "x": 12, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "mode": "percentage",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 70 },
              { "color": "red", "value": 85 }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "1 - sum(node_filesystem_avail_bytes{mountpoint=\"/\"}) / sum(node_filesystem_size_bytes{mountpoint=\"/\"})",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Nodes Status",
      "type": "stat",
      "gridPos": { "h": 6, "w": 6, "x": 18, "y": 0 },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 5 }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "count(kube_node_info)",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Memory Usage by Node",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "fieldConfig": {
        "defaults": { "unit": "bytes" }
      },
      "targets": [
        {
          "expr": "node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "CPU Usage by Node",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "fieldConfig": {
        "defaults": { "unit": "percentunit" }
      },
      "targets": [
        {
          "expr": "1 - avg by (instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m]))",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Pod Count by Namespace",
      "type": "piechart",
      "gridPos": { "h": 8, "w": 8, "x": 0, "y": 14 },
      "targets": [
        {
          "expr": "count by (namespace) (kube_pod_info)",
          "legendFormat": "{{namespace}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Memory by Namespace",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 8, "y": 14 },
      "fieldConfig": {
        "defaults": { "unit": "bytes" }
      },
      "targets": [
        {
          "expr": "sum by (namespace) (container_memory_working_set_bytes{container!=\"\"})",
          "legendFormat": "{{namespace}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "CPU by Namespace",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 8, "x": 16, "y": 14 },
      "fieldConfig": {
        "defaults": { "unit": "percentunit" }
      },
      "targets": [
        {
          "expr": "sum by (namespace) (rate(container_cpu_usage_seconds_total{container!=\"\"}[5m]))",
          "legendFormat": "{{namespace}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Disk Usage by Node",
      "type": "bargauge",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 22 },
      "fieldConfig": {
        "defaults": {
          "unit": "percentunit",
          "min": 0,
          "max": 1,
          "thresholds": {
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 0.7 },
              { "color": "red", "value": 0.85 }
            ]
          }
        }
      },
      "targets": [
        {
          "expr": "1 - (node_filesystem_avail_bytes{mountpoint=\"/\"} / node_filesystem_size_bytes{mountpoint=\"/\"})",
          "legendFormat": "{{instance}}",
          "refId": "A"
        }
      ]
    },
    {
      "title": "Network Traffic",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 22 },
      "fieldConfig": {
        "defaults": { "unit": "Bps" }
      },
      "targets": [
        {
          "expr": "sum(rate(node_network_receive_bytes_total{device!~\"lo|veth.*|flannel.*|cni.*\"}[5m]))",
          "legendFormat": "Received",
          "refId": "A"
        },
        {
          "expr": "sum(rate(node_network_transmit_bytes_total{device!~\"lo|veth.*|flannel.*|cni.*\"}[5m]))",
          "legendFormat": "Transmitted",
          "refId": "B"
        }
      ]
    }
  ],
  "schemaVersion": 38,
  "templating": { "list": [] },
  "time": { "from": "now-1h", "to": "now" },
  "refresh": "30s"
}
