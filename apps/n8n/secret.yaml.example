# EXAMPLE TEMPLATE - Do not commit actual values!
# Copy to secret.yaml and fill in real values, then seal with kubeseal
#
# To generate a new encryption key:
#   openssl rand -hex 32
#
# To seal this secret:
#   kubectl create secret generic n8n-secrets --namespace n8n \
#     --from-literal=N8N_ENCRYPTION_KEY=<your-key> \
#     --from-literal=N8N_BASIC_AUTH_USER=<user> \
#     --from-literal=N8N_BASIC_AUTH_PASSWORD=<password> \
#     --dry-run=client -o yaml | kubeseal --format yaml > sealed-secret.yaml
apiVersion: v1
kind: Secret
metadata:
  name: n8n-secrets
  namespace: n8n
type: Opaque
stringData:
  # Encryption key for credentials (do not change after initial deployment)
  N8N_ENCRYPTION_KEY: "<REPLACE_WITH_64_CHAR_HEX_STRING>"

  # Basic auth for webhook endpoints (optional but recommended)
  N8N_BASIC_AUTH_USER: "<REPLACE_WITH_USERNAME>"
  N8N_BASIC_AUTH_PASSWORD: "<REPLACE_WITH_SECURE_PASSWORD>"
